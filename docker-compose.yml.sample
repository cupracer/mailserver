#    restart: always
#    privileged: true
#    network_mode: "host"
#    volumes:
#      - /var/run/docker.sock:/var/run/docker.sock:ro
#      - /lib/modules:/lib/modules:ro

volumes:
  dovecot_data:
  letsencrypt_conf:
  letsencrypt_data:
  mysql_conf:
  mysql_data:
  postfix_spool:
  redis_data:
  roundcube-mysql_conf:
  roundcube-mysql_data:
